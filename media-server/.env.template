# Media Server Environment Variables
# This is a sample .env file for the media server stacks

# General Settings
TZ=America/New_York
PUID=1000
PGID=1000

# Path settings
# Replace these with your actual paths
MEDIA_SERVER_MEDIA=/path/to/media
MEDIA_SERVER_CONFIG=/path/to/jellyfin/config
MEDIA_SERVER_CACHE=/path/to/jellyfin/cache

# Volume paths for configuration data
JELLYSEER_VOLUME=/path/to/jellyseerr/config
SONARR_VOLUME=/path/to/sonarr/config
RADARR_VOLUME=/path/to/radarr/config
LIDARR_VOLUME=/path/to/lidarr/config
BAZARR_VOLUME=/path/to/bazarr/config
PROWLARR_VOLUME=/path/to/prowlarr/config
GLUETUN_VOLUME=/path/to/gluetun/config
QBITTORRENT_VOLUME=/path/to/qbittorrent/config
NZBGET_VOLUME=/path/to/nzbget/config
NZBGET_Downloads=/path/to/nzbget/downloads

# Jellyfin settings
JELLYFIN_PUBLISHED_SERVER_URL=http://your-server-ip:8096

# NVIDIA hardware acceleration (if applicable)
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=all

# VPN Settings for Gluetun
VPN_SERVICE_PROVIDER=nordvpn  # or your preferred provider
VPN_TYPE=openvpn
OPENVPN_USER=your_vpn_username
OPENVPN_PASSWORD=your_vpn_password
SERVER_COUNTRIES=US  # comma-separated list of countries

# DNS Settings
DOT=off  # DNS over TLS
DNS_ADDRESS=1.1.1.1,1.0.0.1  # Cloudflare DNS

# qBittorrent settings
WEBUI_PORT=8080

# Flaresolverr settings
LOG_LEVEL=info  # debug, info, warn, error
